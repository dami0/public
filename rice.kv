#:kivy 1.8.0

<TitleBar>:
	size_hint_y: 0.05
	canvas:
		Color:
			rgba: 0.35, 0.35, 0.35, 1
		Rectangle:
			size: self.size
			pos: self.pos

	Prompt:
		size_hint_x: 0.3
		size: self.width, root.height
		halign: 'right'
		center_x: root.center_x
		center_y: root.height - self.texture_size[1]

	Label:
#		size_hint_x: 0.05
		text: "Rice Keep"
		font_size: '18sp'
		size: self.width, self.height


<Bbar@Button>:
	text: "I'm a button!"

<SwitchScreen>:
#	size_hint_y: 0.08
	accordion: acco

	canvas:
		Color:
			rgba: 0.15, 0.15, 0.15, 1
		Rectangle:
			size: root.width, root.height
			pos: self.x, root.top - self.height

	AccordionThing:
		id: acco
		
		size_hint_x: 0.3

	Widget:
		size_hint_x: 0.01
		canvas:
			Color:
				rgba: 0.35, 0.35, 0.35, 1
			Rectangle:
				size: self.size
				pos: self.pos

	BoxLayout:
#		id: 
		orientation: "vertical"

		Widget:

		ButtonBar:
			size_hint_y: 0.05
				
			Bbar:

			Bbar:

			Bbar:
