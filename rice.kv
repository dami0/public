#:kivy 1.8.0

<TitleBar>:
	size_hint_y: 0.05
	canvas:
		Color:
			rgba: 0.35, 0.35, 0.35, 1
		Rectangle:
#			size: root.width, root.height*0.05
#			pos: self.x, root.height*95/100
			size: self.size
			pos: self.pos

	Prompt:
		size_hint_x: 0.3
		size: self.width, root.height
		halign: 'right'
		center_x: root.center_x
		center_y: root.height - self.texture_size[1]
#		color: 0, 1, 0.1, 1

	Label:
#		size_hint_x: 0.05
		text: "Rice Keep"
		font_size: '18sp'
#		color: 0, 1, 0.1, 1
		size: self.width, self.height


<Bbar@Button>:
	text: "I'm a button!"
#	color: 0, 1, 0.2, 1
#	background_color: 0, 0, 0, 1

<SwitchScreen>:
#	size_hint_y: 0.08

	canvas:
		Color:
			rgba: 0.15, 0.15, 0.15, 1
		Rectangle:
			size: root.width, root.height
			pos: self.x, root.top - self.height

	AccordionThing:
		size_hint_x: 0.3

	Widget:
		size_hint_x: 0.01
		canvas:
			Color:
				rgba: 0.35, 0.35, 0.35, 1
			Rectangle:
				size: self.size
				pos: self.pos

	BoxLayout:
		orientation: "vertical"

		Widget:

		ButtonBar:
			size_hint_y: 0.05
				
			Bbar:

			Bbar:

			Bbar:
